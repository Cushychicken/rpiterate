# Enable official Raspberry Pi 7" touchscreen support
# Raspberry Pi firmware-based touchscreen driver (builds as module)
CONFIG_TOUCHSCREEN_RASPBERRYPI_FW=m

# Alternative FT5x06 driver (can also work with official touchscreen)
CONFIG_TOUCHSCREEN_EDT_FT5X06=m

# Enable touchscreen subsystem
CONFIG_INPUT_TOUCHSCREEN=y

# Ensure input event interface is enabled
CONFIG_INPUT_EVDEV=y

# Enable the display panel driver
CONFIG_DRM_PANEL_RASPBERRYPI_TOUCHSCREEN=m

# Enable regulator for touchscreen
CONFIG_REGULATOR_RASPBERRYPI_TOUCHSCREEN_ATTINY=m

